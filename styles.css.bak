}
.language-tag-small:hover {
  background: var(--carolina-blue);
  color: white;
  transform: translateY(-1px);
}

/* Responsive adjustments */
@media (max-width: 1024px) {
  .projects-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
}
@media (max-width: 768px) {
  .projects-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  .project-tile {
    padding: 1.5rem;
  }
}
/* GitHub Contributions Section */
.github-contributions {
  padding: 0.5rem 3rem;
  margin-bottom: 2rem;
}
.github-contributions h2 {
  font-size: 1.75rem;
  color: var(--black);
  font-weight: 600;
  margin: 0 0 1.5rem 0;
  text-align: left;
}
.contribution-graph {
  width: 100%;
  max-width: 1200px;
  height: auto;
  border-radius: 0.5rem;
  display: block;
  margin: 0 auto;
}
.contribution-stats {
  text-align: left;
  color: var(--gray-600);
  font-size: 1rem;
  margin: 1rem 0 0 0;
  font-weight: 500;
}

/* Technology Proficiency */
.technology-proficiency {
  margin: 2rem 0;
  padding: 0 2rem;
}
.technology-proficiency h2 {
  font-size: 1.75rem;
  color: var(--black);
  font-weight: 600;
  margin: 0 0 1rem 0;
  text-align: left;
}
.tech-content {
  background: rgba(255,255,255,.9);
  border: 1px solid var(--gray-200);
  border-radius: 1rem;
  padding: 2rem;
  box-shadow: 0 4px 12px rgba(0,0,0,.05);
}
.tech-logos-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
  background: rgba(248,250,252,.5);
  border-radius: 0.75rem;
  padding: 1.5rem;
  justify-items: center;
  align-items: center;
}
.tech-logo {
  height: 40px;
  width: auto;
  max-width: 80px;
  filter: grayscale(100%);
  opacity: 0.7;
  transition: all 0.3s ease;
  object-fit: contain;
}
.tech-logo:hover {
  filter: grayscale(0%);
  opacity: 1;
  transform: scale(1.1);
}
.tech-description {
  font-size: 1rem;
  line-height: 1.6;
  color: var(--gray-700);
  margin: 0;
  text-align: center;
}
.action-boxes {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.5rem;
  margin: 0;
  padding: 0 2rem;
}
.action-box {
  background: rgba(255,255,255,.9);
  border: 1px solid var(--gray-200);
  border-radius: 1rem;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(0,0,0,.05);
}
.action-box:hover {
  box-shadow: 0 8px 24px rgba(0,0,0,.1);
  border-color: var(--carolina-blue);
}
.action-link {
  display: flex;
  align-items: center;
  padding: 2rem;
  text-decoration: none !important;
  color: inherit;
  height: 100%;
}
.action-link:hover {
  background: rgba(75,156,211,.05);
  text-decoration: none !important;
}
.action-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-right: 1.5rem;
  flex-shrink: 0;
}
.action-icon i {
  font-size: 1.5rem;
  color: white;
}

/* GitHub Box - Dark blue accent */
.action-box:nth-child(1) .action-icon {
  background: #24292f;
}
.action-box:nth-child(1):hover .action-icon {
  background: #1a1e22;
}

/* Security Box - Red accent */
.action-box:nth-child(2) .action-icon {
  background: #dc3545;
}
.action-box:nth-child(2):hover .action-icon {
  background: #c82333;
}

.action-content {
  flex: 1;
}
.action-content h3 {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--black);
  margin: 0 0 0.5rem 0;
}
.action-content p {
  font-size: 0.875rem;
  color: var(--gray-600);
  margin: 0;
  line-height: 1.4;
}

/* News */
.news-timeline { margin-top: 1rem; }
.news-year { 
  font-size: 1.25rem; 
  font-weight: 600; 
  color: var(--black); 
  margin: 2rem 0 1rem; 
  padding-bottom: 0.5rem; 
  border-bottom: 2px solid var(--carolina-blue);
}
.news-year:first-child { margin-top: 0; }
.news-items { margin-bottom: 1rem; }
.news-item { 
  display: grid; 
  grid-template-columns: 80px 1fr; 
  gap: 1rem; 
  margin-bottom: 1rem; 
  padding: 0.75rem 0;
}
.news-item.featured { 
  background: rgba(75,156,211,.05); 
  padding: 1rem; 
  border-radius: 0.5rem; 
  border-left: 4px solid var(--carolina-blue);
}
.news-date { 
  color: var(--gray-600); 
  font-size: 0.9rem; 
  font-weight: 500; 
}
.news-content { line-height: 1.6; }
.news-content em { color: var(--carolina-blue); }

/* Publications */
.publications-list { margin: 1rem 0; }
.publication-item { 
  display: grid; 
  grid-template-columns: 120px 1fr; 
  gap: 1.5rem; 
  margin-bottom: 2rem; 
  padding: 1.5rem 0; 
  border-bottom: 1px solid var(--gray-200);
}
.publication-item:last-child { border-bottom: none; }
.pub-image img { 
  width: 120px; 
  height: 80px; 
  object-fit: cover; 
  border-radius: 0.5rem; 
  box-shadow: 0 4px 12px rgba(0,0,0,.1);
}
.pub-title { 
  margin: 0 0 0.5rem; 
  font-size: 1.1rem; 
  font-weight: 600; 
  line-height: 1.4;
}
.pub-authors { 
  margin: 0 0 0.25rem; 
  color: var(--gray-600); 
  font-size: 0.95rem; 
}
.pub-venue { 
  margin: 0 0 0.75rem; 
  color: var(--gray-600); 
  font-size: 0.9rem; 
}
.pub-venue em { color: var(--carolina-blue); }
.award-badge { 
  background: var(--carolina-blue); 
  color: white; 
  padding: 0.2rem 0.5rem; 
  border-radius: 0.25rem; 
  font-size: 0.75rem; 
  margin-left: 0.5rem; 
}
.pub-abstract { 
  margin: 0 0 0.75rem; 
  line-height: 1.6; 
  color: var(--gray-600); 
}
.pub-links a { 
  color: var(--carolina-blue); 
  text-decoration: none; 
  margin-right: 1rem; 
}
.pub-links a:hover { text-decoration: underline; }
.all-publications-link { 
  text-align: center; 
  margin-top: 2rem; 
}
.last-updated { 
  margin: 0.5rem 0 0; 
  color: var(--gray-600); 
  font-size: 0.9rem; 
}

/* Projects */
.project .card-link { margin-top: .5rem; display: inline-block; font-weight: 600; }

/* Teaching */
.teaching-list { margin: 0; padding-left: 1rem; }
.teaching-list li { margin-bottom: .5rem; }

/* Contact */
.contact-grid { display: grid; gap: 1.25rem; grid-template-columns: 1fr 1fr; align-items: start; }
.contact-form { display: grid; gap: .75rem; }
.form-row { display: grid; gap: .25rem; }
.form-row input, .form-row textarea { border: 1px solid var(--gray-200); border-radius: .4rem; padding: .6rem .7rem; font: inherit; }
.form-row input:focus, .form-row textarea:focus { outline: 2px solid rgba(75,156,211,.35); border-color: var(--carolina-blue); }
@media (max-width: 800px) { .contact-grid { grid-template-columns: 1fr; } }

/* Footer */
.site-footer { border-top: 1px solid var(--gray-200); background: var(--white); }
.footer-grid { display: grid; grid-template-columns: 1fr auto; gap: 1rem; align-items: center; padding: 1rem; }
.site-footer nav { display: grid; grid-auto-flow: column; gap: .75rem; }
@media (max-width: 700px) { .footer-grid { grid-template-columns: 1fr; } .site-footer nav { grid-auto-flow: row; } }

/* Utilities */
.header-shadow { box-shadow: 0 4px 14px rgba(0,0,0,.08); }
.sr-only { position: absolute !important; height: 1px; width: 1px; overflow: hidden; clip: rect(1px, 1px, 1px, 1px); white-space: nowrap; }

/* Responsive adjustments */
@media (max-width: 640px) {
  .github-contributions {
    padding: 0.5rem 1rem;
  }
  .action-boxes {
    grid-template-columns: 1fr;
    gap: 1rem;
    margin: 0;
    padding: 0 1rem;
  }
  .technology-proficiency {
    margin: 1.5rem 0;
    padding: 0 1rem;
  }
  .tech-logos-grid {
    grid-template-columns: repeat(auto-fit, minmax(60px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
  }
  .tech-logo {
    height: 32px;
    max-width: 60px;
  }
  .action-icon {
    width: 50px;
    height: 50px;
    margin-right: 0.875rem;
  }
  .action-icon i {
    font-size: 1.25rem;
  }
  .action-content h3 {
    font-size: 1rem;
  }
  .action-content p {
    font-size: 0.8125rem;
  }
}


