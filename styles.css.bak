/* Research Highlights table */
.table-wrap { width: 100%; overflow-x: auto; }

/* Works Tiles */
.tiles-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1rem;
  align-items: stretch;
}
.tile-card {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  padding: 0.9rem 1rem;
  text-decoration: none;
  color: var(--black);
  border: 1px solid var(--gray-200);
  border-radius: 0.6rem;
  background: rgba(255,255,255,.6);
  /* accent vars (overridden by accent-* classes) */
  --tile-accent: rgba(75,156,211,.35);
  --tile-accent-soft: rgba(75,156,211,.14);
  /* Fixed height for consistent sizing */
  height: 100%;
  min-height: 200px;
  transition: all 0.3s ease-in;
}
.tiles-grid a { text-decoration: none; }
.tile-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(0,0,0,.08);
  text-decoration: none;
}
.tile-icon {
  width: 48px;
  height: 48px;
  display: grid;
  place-items: center;
  border-radius: 0.5rem;
  flex-shrink: 0;
}
.tile-icon i { font-size: 1.2rem; }
.tile-body {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  flex: 1;
}
.tile-title { font-weight: 600; }
.tile-desc {
  color: var(--gray-600);
  font-size: 0.95rem;
  flex: 1;
}
.tile-cta {
  font-weight: 600;
  color: var(--carolina-blue);
  border: 1px solid rgba(75,156,211,.35);
  border-radius: 999px;
  padding: 0.18rem 0.6rem;
  align-self: flex-end;
  margin-top: auto;
  flex-shrink: 0;
}
/* chips */
.tile-chips { display: flex; flex-wrap: wrap; gap: 0.4rem; margin: 0.25rem 0 0.35rem; }
.chip {
  display: inline-block;
  padding: 0.16rem 0.55rem;
  border-radius: 999px;
  font-size: 0.8rem;
  font-weight: 600;
  color: #6b7280; /* gray-500 */
  background: rgba(0,0,0,0.06);
  border: 1px solid rgba(0,0,0,0.08);
}

/* Accent color blocks for the icon background */
.accent-blue   { --tile-accent: rgba(75,156,211,.35); --tile-accent-soft: rgba(75,156,211,.14); }
.accent-blue   .tile-icon { background: rgba(75,156,211,.10); color: var(--carolina-blue); }
.accent-emerald { --tile-accent: rgba(16,185,129,.35); --tile-accent-soft: rgba(16,185,129,.14); }
.accent-emerald .tile-icon { background: rgba(16,185,129,.12); color: #0a5d30; }
.accent-amber  { --tile-accent: rgba(245,158,11,.35); --tile-accent-soft: rgba(245,158,11,.16); }
.accent-amber  .tile-icon { background: rgba(245,158,11,.12); color: #92400e; }
.accent-purple { --tile-accent: rgba(139,92,246,.35); --tile-accent-soft: rgba(139,92,246,.16); }
.accent-purple .tile-icon { background: rgba(139,92,246,.12); color: #5b21b6; }
.accent-rose   { --tile-accent: rgba(244,63,94,.35); --tile-accent-soft: rgba(244,63,94,.16); }
.accent-rose   .tile-icon { background: rgba(244,63,94,.12); color: #9f1239; }
.accent-teal   { --tile-accent: rgba(45,212,191,.35); --tile-accent-soft: rgba(45,212,191,.16); }
.accent-teal   .tile-icon { background: rgba(45,212,191,.12); color: #0f766e; }
.accent-indigo { --tile-accent: rgba(99,102,241,.35); --tile-accent-soft: rgba(99,102,241,.16); }
.accent-indigo .tile-icon { background: rgba(99,102,241,.12); color: #4338ca; }
.accent-gray   { --tile-accent: rgba(107,114,128,.35); --tile-accent-soft: rgba(107,114,128,.16); }
.accent-gray   .tile-icon { background: rgba(107,114,128,.12); color: #374151; }

@media (max-width: 1000px) {
  .tiles-grid { grid-template-columns: repeat(2, 1fr); }
}
/* More to Explore - Special Tiles */
.explore-tiles { display: grid; grid-template-columns: 1fr 2fr; gap: 1.5rem; margin-top: 1rem; }
.explore-tile {
  display: grid;
  grid-template-rows: auto 1fr auto;
  gap: 1rem;
  padding: 1.5rem;
  text-decoration: none;
  color: var(--black);
  border: 1px solid var(--gray-200);
  border-radius: 1rem;
  background: linear-gradient(135deg, rgba(255,255,255,.9) 0%, rgba(248,250,252,.9) 100%);
  box-shadow: 0 4px 12px rgba(0,0,0,.05);
  transition: none;
}
.explore-tile-icon {
  width: 60px;
  height: 60px;
  display: grid;
  place-items: center;
  border-radius: 50%;
  background: rgba(75,156,211,.1);
  color: var(--carolina-blue);
  font-size: 1.5rem;
}
.explore-tile-title {
  font-size: 1.25rem;
  font-weight: 700;
  text-align: left;
  margin-bottom: 0.5rem;
}
.explore-tile-desc {
  color: var(--gray-700);
  font-size: 0.95rem;
  line-height: 1.5;
  text-align: left;
  margin-bottom: 1rem;
}
.explore-tile-cta {
  font-weight: 600;
  color: var(--carolina-blue);
  text-align: left;
  padding: 0.5rem 1rem;
  border: 1px solid rgba(75,156,211,.3);
  border-radius: 999px;
  transition: none;
}

.explore-tile.room-small {
  padding: 1rem;
  transition: box-shadow 0.3s ease;
  text-decoration: none;
}
.explore-tile.room-small .explore-tile-icon {
  width: 48px;
  height: 48px;
  font-size: 1.2rem;
}
.explore-tile.room-small .explore-tile-title {
  font-size: 1.1rem;
  text-decoration: none;
}
.explore-tile.room-small .explore-tile-desc {
  font-size: 0.9rem;
  text-decoration: none;
}
.explore-tile.room-small .explore-tile-cta {
  text-decoration: none;
}
.explore-tile.room-small:hover {
  box-shadow: 0 0 0 3px rgba(75,156,211,.15), 0 6px 16px rgba(0,0,0,.08);
}
.explore-tile.room-small:hover .explore-tile-title,
.explore-tile.room-small:hover .explore-tile-desc,
.explore-tile.room-small:hover .explore-tile-cta {
  text-decoration: none;
}

/* Special styling for Thank You tile */
.explore-tile.thank-you {
  background: linear-gradient(135deg, rgba(244,63,94,.05) 0%, rgba(252,165,165,.05) 100%);
  border-color: rgba(244,63,94,.2);
}
.explore-tile.thank-you .explore-tile-icon {
  background: rgba(244,63,94,.1);
  color: #dc2626;
}
.explore-tile.thank-you .explore-tile-cta {
  border-color: rgba(244,63,94,.3);
  color: #dc2626;
}

/* Highlight Tags */
.highlight-tag {
  display: inline-block;
  background: var(--carolina-blue);
  color: white;
  padding: 0.2rem 0.6rem;
  border-radius: 1rem;
  font-size: 0.875rem;
  font-weight: 500;
  margin: 0 0.25rem;
  text-decoration: none;
  transition: all 0.2s ease;
}

/* Project Introduction */
.project-intro {
  padding: 2rem 1.5rem;
  margin-bottom: 1rem;
}
.intro-title {
  font-size: 1.75rem;
  color: var(--black);
  font-weight: 600;
  margin: 0 0 1.5rem 0;
  position: relative;
  padding-bottom: 0.5rem;
}
.intro-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60px;
  height: 2px;
  background: var(--carolina-blue);
}
.intro-text {
  font-size: 1.1rem;
  line-height: 1.7;
  color: var(--gray-600);
  margin: 0 0 1.5rem 0;
  text-align: left;
}
.intro-text:last-child {
  margin-bottom: 0;
}
.research-table { width: 100%; border-collapse: separate; border-spacing: 0; }
.research-table thead { display: none; }
.research-table tbody td {
  padding: 0.6rem 0.6rem;
  vertical-align: top;
  border-bottom: 1px solid var(--gray-200);
}
.research-table tbody td:first-child { font-weight: 700; color: var(--black); }
.research-table tbody tr:nth-child(odd) { background: rgba(0,0,0,0.02); }
.research-table a { color: var(--carolina-blue); font-weight: 600; text-decoration: none; }
.research-table a:hover { text-decoration: underline; }

/* Research Highlights list (simple style) */
.rh-wrap { border: 1px solid var(--gray-200); border-radius: 0.6rem; overflow: hidden; background: rgba(255,255,255,.6); }
.research-list { list-style: none; margin: 0; padding: 0; }
.rh-item { display: grid; grid-template-columns: 96px 1fr; align-items: start; gap: 0.75rem; padding: 0.65rem 0.9rem; }
.rh-item:nth-child(odd) { background: rgba(0,0,0,0.02); }
.rh-left { color: var(--gray-600); font-size: 0.9rem; letter-spacing: 0.04em; text-transform: none; }
.rh-right { display: grid; gap: 0.25rem; }
.rh-title { font-weight: 400; color: var(--black); }
.rh-desc { color: var(--gray-600); }
.rh-link a { color: var(--carolina-blue); text-decoration: none; }
.rh-link a:hover { text-decoration: underline; }
.rh-link i { margin-left: 0; }

/* Two-column Highlights grid */
.highlights-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; align-items: start; }
.highlight-col h2 { margin: 0 0 .5rem; }
.empty-note { color: var(--gray-500); margin-top: .5rem; }

/* Advertisement */
.ad-section { padding-top: 0; }
.ad-link { display: block; }
.ad-image { width: 100%; height: auto; border-radius: 0.6rem; display: block; border: 1px solid var(--gray-200); background: #fff; }

@media (max-width: 640px) {
  .rh-item { grid-template-columns: 80px 1fr; }
}
@media (max-width: 900px) {
  .highlights-grid { grid-template-columns: 1fr; }
}

/* Research Downloads */
.download-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
.download-card {
  display: grid; grid-template-columns: 42px 1fr 20px; align-items: center; gap: 0.75rem;
  padding: 0.9rem 1rem; text-decoration: none; color: var(--black);
  border: 1px solid var(--gray-200); border-radius: 0.6rem;
  background: rgba(255,255,255,.6); backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px);
  box-shadow: 0 2px 10px rgba(0,0,0,.04);
}
.download-card:hover { box-shadow: 0 6px 16px rgba(0,0,0,.08); transform: translateY(-1px); transition: box-shadow .2s ease, transform .2s ease; }
.download-icon { width: 42px; height: 42px; display: grid; place-items: center; border-radius: 0.5rem; background: rgba(75,156,211,.10); color: var(--carolina-blue); }
.download-icon i { font-size: 1.1rem; }
.download-text { display: grid; line-height: 1.25; }
.download-title { font-weight: 600; }
.download-sub { color: var(--gray-600); font-size: 0.9rem; }
.dl-arrow { color: var(--carolina-blue); }

@media (max-width: 640px) {
  .download-grid { grid-template-columns: 1fr; }
}
/* Inline layout for awards + tags on one line */
.edu-meta { display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap; margin-top: 0.35rem; }
.edu-awards, .edu-tags { display: flex; gap: 0.4rem; margin: 0; }
.edu-awards { margin-right: 0.25rem; }
/* Simple Image Viewer */
.img-viewer-overlay[hidden] { display: none !important; }
.img-viewer-overlay {
  position: fixed; inset: 0; z-index: 1100;
}
.img-viewer-backdrop { position: absolute; inset: 0; background: transparent; }
.img-viewer-img {
  position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
  max-width: min(96vw, 1400px);
  max-height: 92vh;
  width: auto; height: auto; /* prevent upscaling beyond natural size */
  image-rendering: auto; /* crisp scaling */
  box-shadow: 0 24px 60px rgba(0,0,0,.45);
  border-radius: 10px;
}
.img-viewer-close {
  position: absolute; top: 12px; right: 16px; z-index: 1;
  border: 0; background: rgba(255,255,255,.92); color: #111;
  width: 38px; height: 38px; border-radius: 999px; font-size: 22px; line-height: 1; cursor: pointer;
}
.img-viewer-hint { position: absolute; bottom: 16px; left: 50%; transform: translateX(-50%); color: rgba(255,255,255,.85); font-size: .9rem; }
/* Color palette */
:root {
  --white: #ffffff;
  --black: #0a0a0a;
  --carolina-blue: #4B9CD3; /* UNC Carolina Blue */
  --gray-100: #f6f8fa;
  --gray-200: #eef1f4;
  --gray-600: #5a6772;
  --max-w: 1120px;
}

/* Base */
html { box-sizing: border-box; }
*, *::before, *::after { box-sizing: inherit; }
body {
  margin: 0;
  color: var(--black);
  background: var(--white);
  font: 400 16px/1.6 "Asap", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
}
.brand, h1, h2, h3, h4, h5, h6 { font-family: "Asap Condensed", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; }
img { max-width: 100%; height: auto; display: block; }
a { color: var(--carolina-blue); text-decoration: none; }
a:hover { text-decoration: underline; }

.skip-link {
  position: absolute; left: -999px; top: auto; width: 1px; height: 1px; overflow: hidden;
}
.skip-link:focus { left: 1rem; top: 1rem; width: auto; height: auto; background: var(--black); color: var(--white); padding: .5rem .75rem; border-radius: .25rem; }

/* Layout helpers */
.container { width: 100%; max-width: var(--max-w); margin: 0 auto; padding: 0 1rem; }
.grid { display: grid; gap: 1.25rem; }

/* Header */
.site-header { 
  position: sticky; 
  top: 0; 
  background: rgba(255,255,255,.85); 
  backdrop-filter: blur(16px); 
  -webkit-backdrop-filter: blur(16px); 
  z-index: 100; 
  border-bottom: 1px solid rgba(75,156,211,.1);
  transition: all 0.3s ease;
}
.header-grid { 
  display: grid; 
  grid-template-columns: auto 1fr; 
  align-items: center; 
  padding: 1rem 1.5rem; 
  gap: 3rem;
}
.brand { 
  font-weight: 700; 
  color: var(--black); 
  font-size: 1.25rem; 
  letter-spacing: -0.02em;
  transition: color 0.2s ease;
  display: flex;
  align-items: center;
  text-decoration: none;
}
.brand-logo {
  height: 32px;
  width: auto;
  display: block;
}
.brand:hover { color: var(--carolina-blue); text-decoration: none; }

.nav-toggle { 
  background: transparent; 
  border: 0; 
  display: inline-grid; 
  gap: 4px; 
  padding: 0.75rem; 
  cursor: pointer; 
  border-radius: 0.5rem;
  transition: background-color 0.2s ease;
}
.nav-toggle:hover { background: rgba(75,156,211,.08); }
.nav-toggle-bar { 
  width: 24px; 
  height: 2px; 
  background: var(--black); 
  display: block; 
  border-radius: 1px;
  transition: all 0.3s ease;
}
.nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(1) { transform: rotate(45deg) translate(6px, 6px); }
.nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(2) { opacity: 0; }
.nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(3) { transform: rotate(-45deg) translate(6px, -6px); }

.header-right { 
  display: flex; 
  align-items: center; 
  gap: 1rem; 
  justify-self: end; 
}
.site-nav { justify-self: end; }
.site-nav ul { 
  list-style: none; 
  margin: 0; 
  padding: 0; 
  display: grid; 
  grid-auto-flow: column; 
  gap: 1.25rem; 
}
.site-nav a { 
  color: var(--black); 
  font-weight: 500; 
  font-size: 0.95rem;
  padding: 0.5rem 0;
  position: relative;
  transition: color 0.2s ease;
}
.site-nav a::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--carolina-blue);
  transition: width 0.3s ease;
}
.site-nav a:hover { color: var(--carolina-blue); text-decoration: none; }
.site-nav a:hover::after { width: 100%; }

@media (max-width: 768px) {
  .header-grid { 
    padding: 1rem; 
    grid-template-columns: auto 1fr;
    gap: 2rem;
  }
  .header-right { gap: 0.5rem; }
  .site-nav { 
    display: none; 
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(255,255,255,.95);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-top: 1px solid rgba(75,156,211,.1);
    box-shadow: 0 4px 20px rgba(0,0,0,.08);
  }
  .site-nav.open { display: block; padding: 1.5rem 1rem; }
  .site-nav ul { grid-auto-flow: row; gap: 0; }
  .site-nav a { 
    display: block; 
    padding: 0.75rem 0; 
    border-bottom: 1px solid rgba(75,156,211,.1);
  }
  .site-nav a:last-child { border-bottom: none; }
}

@media (min-width: 769px) {
  .nav-toggle { display: none; }
}

.accent-bar { height: 3px; background: linear-gradient(90deg, var(--carolina-blue), #a8d8f0 70%); }

.hero { 
  background: linear-gradient(135deg, var(--gray-100) 0%, rgba(75,156,211,.03) 100%); 
  border-bottom: 1px solid rgba(75,156,211,.08); 
  position: relative; 
  overflow: hidden;
}
.hero::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 40%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(75,156,211,.04), transparent);
  transform: rotate(15deg);
  pointer-events: none;
}
.hero-grid { 
  display: grid; 
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); 
  gap: 3rem; 
  align-items: center; 
  padding: 4rem 1rem; 
  position: relative;
  z-index: 1;
}
.hero-title { 
  font-size: clamp(2rem, 1.5rem + 2.5vw, 3.5rem); 
  line-height: 1.1; 
  margin: 0 0 1rem; 
  font-weight: 700;
  color: var(--black);
}
.hero-subtitle { 
  color: var(--gray-600); 
  margin: 0 0 2rem; 
  font-size: 1.1rem;
  line-height: 1.7;
  max-width: 90%;
}
.hero-actions { 
  display: flex; 
  gap: 1rem; 
  flex-wrap: wrap;
}
.hero-figure { 
  order: -1; 
  border-radius: 1rem; 
  overflow: hidden; 
  box-shadow: 0 20px 40px rgba(0,0,0,.1), 0 10px 20px rgba(0,0,0,.05);
  transform: perspective(1000px) rotateY(-5deg) rotateX(5deg);
  transition: transform 0.3s ease;
}
.hero-figure:hover {
  transform: perspective(1000px) rotateY(-2deg) rotateX(2deg);
}

/* Enhanced glassmorphic panel for hero text */
.hero-text { 
  background: rgba(255,255,255,.7); 
  border: 1px solid rgba(255,255,255,.3); 
  border-radius: 1.5rem; 
  padding: 2.5rem; 
  backdrop-filter: blur(20px); 
  -webkit-backdrop-filter: blur(20px); 
  box-shadow: 0 20px 40px rgba(0,0,0,.08), 0 8px 16px rgba(0,0,0,.04);
  position: relative;
}
.hero-text::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(75,156,211,.05) 0%, transparent 50%);
  border-radius: 1.5rem;
  pointer-events: none;
}

/* Mobile Responsive */
@media (max-width: 640px) {
  .portrait-top {
    text-align: center;
  }
  .name-title {
    font-size: 2rem;
  }
  .education-section {
    flex-direction: column;
    gap: 1rem;
  }
  .education-box {
    min-width: auto;
  }
  .research-container {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }
  .news-item { 
    grid-template-columns: 1fr; 
    gap: 0.5rem; 
  }
  .news-date { 
    text-align: left; 
    font-weight: 600; 
  }
  .education-header { 
    flex-direction: column; 
    align-items: flex-start; 
    gap: 0.25rem; 
  }
  .award-item { 
    flex-direction: column; 
    align-items: flex-start; 
    gap: 0.25rem; 
  }
  .education-boxes {
    grid-template-columns: 1fr;
    gap: 0.5rem;
    justify-content: center;
  }
  .education-box {
    min-width: 240px;
  }
}

/* Research Interests Section */
.research-container {
  display: flex;
  gap: 2rem;
  align-items: flex-start;
}
.research-left {
  flex: 1;
}
.research-right {
  flex-shrink: 0;
}
.research-image {
  width: 240px;
  height: 240px;
  object-fit: contain;
}
.btn { display: inline-block; padding: .6rem .9rem; border-radius: .4rem; font-weight: 600; border: 2px solid transparent; }
.btn-primary { background: var(--carolina-blue); color: var(--white); }
.btn-primary:hover { filter: brightness(.95); text-decoration: none; }
.btn-outline { border-color: var(--carolina-blue); color: var(--carolina-blue); background: transparent; }
.btn-outline:hover { background: rgba(75,156,211,.08); text-decoration: none; }

/* Explore Tiles */
.explore-tiles {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: 2rem;
  align-items: start;
}
.explore-tile {
  background: rgba(255,255,255,.9);
  border: 1px solid var(--gray-200);
  border-radius: 1rem;
  padding: 2rem;
  transition: none;
  box-shadow: 0 4px 12px rgba(0,0,0,.05);
  height: 280px;
  display: flex;
  flex-direction: column;
  text-decoration: none;
  color: inherit;
}
.explore-tile:hover {
  transform: none;
  box-shadow: 0 4px 12px rgba(0,0,0,.05);
  border-color: rgba(75,156,211,.3);
  background: rgba(255,255,255,.95);
}
  transform: none;
  box-shadow: 0 4px 12px rgba(0,0,0,.05);
  border-color: rgba(75,156,211,.3);
  background: rgba(255,255,255,.95);
